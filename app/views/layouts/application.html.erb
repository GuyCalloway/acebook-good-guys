<!DOCTYPE html>
<html>

<head>
    <title>Acebook</title>
    <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all' %>
            <%= javascript_include_tag 'application' %>
</head>

<body class="body">
    <div>

        <div>
            <% if signed_in? %>
                <p class="jumbotron">
                    <span class="span"> Signed in as: </span>
                    <%= link_to user_path(current_user), class:"username" do %>
                        <p class='username'>
                            <%= current_user.username.capitalize %>
                        </p>

                        <div class='avatar'>
                            <%= image_tag(current_user.avatar, class:"avatar") if current_user.avatar.attached?%>
                                <% end %>
                        </div>
                        
                </p>
                <div class='button'>
                <%= button_to 'Sign out ', sign_out_path, method: :delete, data: { confirm: 'Are you sure? ' }%>
                </div>
                    <% else %>

                        <div class="jumbotron text-center">
                            <div>
                                <% end %>
                                    <p class='home_button '>
                                        <%= link_to 'HOME ', root_path, class:"home_button"  %>
                                    </p>

                                    <div id="flash">
                                        <% flash.each do |key, value| %>
                                            <div class="flash <%= key %>">
                                                <%= value %>
                                            </div>
                                            <% end %>
                                    </div>
                            </div>
                            <br>
                            <%= yield %>
                        </div>
</body>

</html>