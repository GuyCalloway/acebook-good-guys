<p class='notice'>
    <%= notice %>
</p>

<p>
    <h1> <%= @post.message %> </h1>
    <% like_check = @post.likes.find { |like| like.user_id == current_user.id} %>
    <% if like_check %>
      <%= button_to 'Unlike', post_like_path(@post, like_check), method: :delete %>
    <% else %>
      <%= button_to 'Like', post_likes_path(@post), method: :post %>
    <% end %>
</p>
    

<%if @post.comments.count == 0 %>
  <h4>No Comments</h4>
<% else %>
  <%@post.comments.each do |comment| %>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <%end%>
<%end%> 
 <div class="jumbotron">

 <% if @post.user_id == current_user.id %>
   <%= link_to 'Edit', edit_post_path(@post) %> |
 <% end %>
<%= link_to 'Back', posts_path %>
</div>